<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TopBasprog" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>
    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Base.Theme.TopBasprog2" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Base.Theme.TopBasprog3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.TopBasprog" parent="Base.Theme.TopBasprog" />
</resources>